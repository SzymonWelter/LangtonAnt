<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="675.0" prefWidth="605.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="controllers.BoardController">
    <children>
        <VBox layoutX="1.0" layoutY="1.0" style="-fx-border-color: BLACK;" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ScrollPane prefHeight="605.0" prefWidth="641.0">
                    <content>
                        <Canvas fx:id="mainCanvas" height="600.0" onMouseClicked="#onMouseClicked"
                                onMouseExited="#hidePosition" onMouseMoved="#showPosition" width="600.0"/>
                    </content>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ScrollPane>
                <HBox alignment="CENTER" prefHeight="69.0" prefWidth="603.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="68.0" prefWidth="114.0" text="Board"
                               textAlignment="CENTER" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="30.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <Label prefHeight="68.0" prefWidth="53.0" text="Width">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="widthField" prefWidth="100.0">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                            <HBox.margin>
                                <Insets bottom="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <Label prefHeight="44.0" prefWidth="56.0" text="Height">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="heightField" prefWidth="100.0">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                            <HBox.margin>
                                <Insets bottom="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#setNewSizeOfBoard" prefWidth="100.0"
                                text="Set values">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
